{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": false,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "useDefineForClassFields": false,
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@environments/*": [
        "environments/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": false,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
